[
  {
    "name": "Challenge",
    "type": "object",
    "properties": {
      "title": {
        "type": "string",
        "description": "Challenge title"
      },
      "description": {
        "type": "string",
        "description": "Detailed description of the challenge"
      },
      "category": {
        "type": "string",
        "enum": [
          "waste",
          "energy",
          "water",
          "biodiversity",
          "transport",
          "food"
        ],
        "description": "Environmental category"
      },
      "points_reward": {
        "type": "number",
        "default": 50,
        "description": "Points awarded for completion"
      },
      "difficulty": {
        "type": "string",
        "enum": [
          "easy",
          "medium",
          "hard"
        ],
        "default": "medium",
        "description": "Challenge difficulty level"
      },
      "requires_photo": {
        "type": "boolean",
        "default": true,
        "description": "Whether photo evidence is required"
      },
      "instructions": {
        "type": "string",
        "description": "Step-by-step instructions"
      },
      "learning_objective": {
        "type": "string",
        "description": "What students should learn"
      }
    },
    "required": [
      "title",
      "description",
      "category"
    ]
  },
  {
    "name": "ChallengeSubmission",
    "type": "object",
    "properties": {
      "challenge_id": {
        "type": "string",
        "description": "ID of the challenge"
      },
      "user_email": {
        "type": "string",
        "description": "Email of the student who submitted"
      },
      "photo_url": {
        "type": "string",
        "description": "URL of submitted photo"
      },
      "description": {
        "type": "string",
        "description": "Student's description of their action"
      },
      "status": {
        "type": "string",
        "enum": [
          "pending",
          "approved",
          "rejected"
        ],
        "default": "pending",
        "description": "Submission status"
      },
      "points_awarded": {
        "type": "number",
        "default": 0,
        "description": "Points awarded for this submission"
      }
    },
    "required": [
      "challenge_id",
      "user_email",
      "description"
    ]
  },
  {
    "name": "GameSession",
    "type": "object",
    "properties": {
      "user_email": {
        "type": "string",
        "description": "Email of the player"
      },
      "game_type": {
        "type": "string",
        "enum": [
          "waste-sorting",
          "carbon-calculator",
          "energy-saver",
          "eco-quiz"
        ],
        "description": "Type of game played"
      },
      "score": {
        "type": "number",
        "description": "Score achieved in the game"
      },
      "points_earned": {
        "type": "number",
        "description": "Points earned from this session"
      },
      "duration_seconds": {
        "type": "number",
        "description": "Time spent playing in seconds"
      },
      "completed": {
        "type": "boolean",
        "default": true,
        "description": "Whether the game was completed"
      }
    },
    "required": [
      "user_email",
      "game_type",
      "score"
    ]
  },
  {
    "name": "UserProgress",
    "type": "object",
    "properties": {
      "user_email": {
        "type": "string",
        "description": "Email of the student"
      },
      "total_points": {
        "type": "number",
        "default": 0,
        "description": "Total points earned"
      },
      "level": {
        "type": "number",
        "default": 1,
        "description": "Current level"
      },
      "badges": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "default": [],
        "description": "List of earned badges"
      },
      "completed_games": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "default": [],
        "description": "List of completed game IDs"
      },
      "current_streak": {
        "type": "number",
        "default": 0,
        "description": "Current daily activity streak"
      },
      "total_challenges_completed": {
        "type": "number",
        "default": 0,
        "description": "Number of real-world challenges completed"
      }
    },
    "required": [
      "user_email"
    ]
  }
]