{
  "name": "UserProgress",
  "type": "object",
  "properties": {
    "user_email": {
      "type": "string",
      "description": "Email of the student"
    },
    "total_points": {
      "type": "number",
      "default": 0,
      "description": "Total points earned"
    },
    "level": {
      "type": "number",
      "default": 1,
      "description": "Current level"
    },
    "badges": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [],
      "description": "List of earned badges"
    },
    "completed_games": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [],
      "description": "List of completed game IDs"
    },
    "current_streak": {
      "type": "number",
      "default": 0,
      "description": "Current daily activity streak"
    },
    "total_challenges_completed": {
      "type": "number",
      "default": 0,
      "description": "Number of real-world challenges completed"
    }
  },
  "required": [
    "user_email"
  ]
}